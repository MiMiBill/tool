<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:background="#F5F5F5"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:visibility="gone"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_bt_return"
                android:scaleType="centerCrop"
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:layout_marginRight="22dp"/>
            <TextView
                android:text="更换支架"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="#ff333333"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_network_exception"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_network_exception"
                    android:layout_width="210dp"
                    android:layout_height="130dp" />
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络异常啦~"
                    android:textColor="#ffa8a8a8"
                    android:textSize="14sp"
                    />
            </LinearLayout>



        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_content"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <com.zkys.operationtool.widget.MyTextView
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/btn_blue_solid_bg"
                        android:drawablePadding="9dp"
                        app:drawableWidth="3dp"
                        app:drawableHeight="17dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="选择新的支架"
                        android:textColor="#ff333333"
                        android:background="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_activation_scan"
                        android:layout_marginRight="16dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">


                        <TextView
                            android:layout_gravity="center_vertical"
                            android:text="ZID"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/tv_bracket_bar_code"
                            android:layout_marginLeft="26dp"
                            android:layout_marginRight="16dp"
                            android:layout_gravity="center_vertical"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="支架条形码"
                            android:textColorHint="#CCCCCC" />

                        <ImageView
                            android:paddingLeft="10dp"
                            android:paddingRight="16dp"
                            android:scaleType="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/iv_scan_bracket_code"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/icon_activation_scan" />

                    </LinearLayout>
                    <View
                        android:layout_marginLeft="75dp"
                        android:layout_alignParentBottom="true"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <LinearLayout
                        android:paddingLeft="16dp"
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:text="请选择更换的原因"
                            android:textColor="#ff333333"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_chevron"
                            android:layout_weight="0"
                            android:layout_marginRight="16dp"
                            android:layout_width="8dp"
                            android:layout_height="13dp" />

                    </LinearLayout>
                    <View
                        android:layout_marginLeft="75dp"
                        android:layout_alignParentBottom="true"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>
                </RelativeLayout>

                <com.zkys.operationtool.widget.MyTextView
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/btn_blue_solid_bg"
                    android:drawablePadding="9dp"
                    app:drawableWidth="3dp"
                    app:drawableHeight="17dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text="备注"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />


                <EditText
                    android:id="@+id/et_remark"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:background="#ffffff"
                    android:gravity="top|left"
                    android:hint="请填写备注...."
                    android:textColorHint="#CCCCCC" />


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


    <TextView
        android:enabled="false"
        android:id="@+id/tv_replace"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="更换支架"
        android:layout_marginBottom="28dp"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:background="@drawable/btn_enable_selector"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="47dp" />

</RelativeLayout>