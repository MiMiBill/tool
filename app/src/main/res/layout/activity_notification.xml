<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.NotificationActivity">

    <RelativeLayout
        android:id="@+id/rel_notification"
        android:layout_marginLeft="@dimen/padding_15"
        android:background="@mipmap/icon_bg_shadow"
        android:layout_width="@dimen/padding_107"
        android:layout_height="@dimen/padding_119">
        <LinearLayout
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="@dimen/padding_35"
            android:layout_height="@dimen/padding_45" >
            <ImageView
                android:src="@mipmap/icon_alert"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:text="警报信息"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/padding_20"
            android:textColor="@color/textcolor_333333"
            android:textSize="@dimen/text_size_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_20" />
        <TextView
            android:id="@+id/tv_nofi_num"
            android:text="100"
            android:textSize="8sp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/red_point"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_order"
        android:background="@mipmap/icon_bg_shadow"
        android:layout_width="@dimen/padding_107"
        android:layout_height="@dimen/padding_119">
        <LinearLayout
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_width="@dimen/padding_35"
            android:layout_height="@dimen/padding_45" >
            <ImageView
                android:id="@+id/iv_img"
                android:src="@mipmap/order"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:text="逾期订单"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/padding_20"
            android:textColor="@color/textcolor_333333"
            android:textSize="@dimen/text_size_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_20" />
        <TextView
            android:id="@+id/tv_order_num"
            android:text="100"
            android:textSize="8sp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/red_point"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>