<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:background="#F5F5F5"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_title"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_bt_return"
                android:scaleType="centerCrop"
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:layout_marginRight="22dp"/>
            <TextView
                android:text="音量控制"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="#ff333333"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_network_exception"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_network_exception"
                    android:layout_width="210dp"
                    android:layout_height="130dp" />
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络异常啦~"
                    android:textColor="#ffa8a8a8"
                    android:textSize="14sp"
                    />
            </LinearLayout>



        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_content"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl_select_hospital"
                    android:paddingLeft="16dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_selected_hospital"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:hint="请选择医院"
                        android:textColorHint="#ff333333"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_chevron"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_width="8dp"
                        android:layout_height="13dp" />
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                </RelativeLayout>
                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:id="@+id/rl_select_core"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/tv_selected_core"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:hint="请选择科室"
                        android:textColorHint="#ff333333"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_chevron"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_width="8dp"
                        android:layout_height="13dp" />
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                </RelativeLayout>


                <com.zkys.operationtool.widget.MyTextView
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/btn_blue_solid_bg"
                    android:drawablePadding="9dp"
                    app:drawableWidth="3dp"
                    app:drawableHeight="17dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text="最大音量设定"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
                
                <LinearLayout
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="133dp">
                    <TextView
                        android:id="@+id/tv_volume"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff333333"
                        android:textSize="30sp"
                        />
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:max="100"
                        android:splitTrack="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        style="@style/CustomSeekbarStyle"
                        android:progress="0"/>


                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_confirm"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="提交修改"
        android:layout_marginBottom="28dp"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:background="@mipmap/icon_button_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="47dp" />

</RelativeLayout>