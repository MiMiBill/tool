<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.RepairDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50">
            <TextView
                android:text="床号"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_585858"
                android:layout_width="@dimen/padding_60"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_bednums"
                android:text=""
                android:layout_marginLeft="@dimen/padding_20"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/color_F88C4C"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_dddddd"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50">
            <TextView
                android:text="报修内容"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_585858"
                android:layout_width="@dimen/padding_60"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_reason"
                android:text=""
                android:singleLine="true"
                android:layout_marginLeft="@dimen/padding_20"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/color_585858"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_dddddd"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50">
            <TextView
                android:text="报修状态"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_585858"
                android:layout_width="@dimen/padding_60"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_status"
                android:text=""
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_20"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/color_585858"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_dddddd"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50">
            <TextView
                android:text="处理状态"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_585858"
                android:layout_width="@dimen/padding_60"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/lly_sta"
                android:layout_width="124dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/status_bg"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_sta"
                    android:text=""
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_585858"
                    android:layout_width="@dimen/padding_60"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_width="16dp"
                    android:clickable="false"
                    android:src="@mipmap/arror_down"
                    android:layout_height="9dp" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_dddddd"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50">
            <TextView
                android:text="处理结果"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_585858"
                android:layout_width="@dimen/padding_60"
                android:layout_height="match_parent" />
        </LinearLayout>
        <EditText
            android:id="@+id/edt_ques"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_175"
            android:textSize="@dimen/text_size_15"
            android:gravity="start"
            android:paddingTop="@dimen/padding_15"
            android:paddingLeft="@dimen/padding_10"
            android:textColor="@color/textcolor_333333"
            android:hint="请输入..."
            android:background="@color/color_F5F5F5"
            />
        <TextView
            android:id="@+id/tv_commit"
            android:gravity="center"
            android:text="提交"
            android:layout_marginBottom="28dp"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:background="@mipmap/icon_button_bg"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="47dp" />
    </LinearLayout>
</LinearLayout>