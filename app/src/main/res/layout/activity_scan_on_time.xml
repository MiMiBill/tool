<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:background="#F5F5F5"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_title"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_bt_return"
                android:scaleType="centerCrop"
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:layout_marginRight="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="扫一扫开时长"
                android:textColor="#ff333333"
                android:textSize="19sp"
                android:textStyle="bold" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#EEEEEE"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_network_exception"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_network_exception"
                    android:layout_width="210dp"
                    android:layout_height="130dp" />
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络异常啦~"
                    android:textColor="#ffa8a8a8"
                    android:textSize="14sp"
                    />
            </LinearLayout>



        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_content"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <com.zkys.operationtool.widget.MyTextView
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/btn_blue_solid_bg"
                        android:drawablePadding="9dp"
                        app:drawableWidth="3dp"
                        app:drawableHeight="17dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="选择平板"
                        android:textColor="#ff333333"
                        android:background="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_activation_scan"
                        android:layout_marginRight="16dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="医院"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="东莞市大朗人民医院"
                        android:textColor="#ffcccccc"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                </RelativeLayout>
                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="科室"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="神经科"
                        android:textColor="#ffcccccc"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                </RelativeLayout>
                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="床位"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="02"
                        android:textColor="#ffcccccc"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                </RelativeLayout>
                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="DID"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="1546546546"
                        android:textColor="#ffcccccc"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


                <com.zkys.operationtool.widget.MyTextView
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/btn_blue_solid_bg"
                    android:drawablePadding="9dp"
                    app:drawableWidth="3dp"
                    app:drawableHeight="17dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text="开启时长"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <RelativeLayout
                    android:paddingLeft="16dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="选择时长"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_chevron"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_width="8dp"
                        android:layout_height="13dp" />
                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#EEEEEE"
                        android:layout_width="match_parent"
                        android:layout_height="1px"/>

                </RelativeLayout>

                <com.zkys.operationtool.widget.MyTextView
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/btn_blue_solid_bg"
                    android:drawablePadding="9dp"
                    app:drawableWidth="3dp"
                    app:drawableHeight="17dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text="理由"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <EditText
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:background="#ffffff"
                    android:gravity="top|left"
                    android:hint="请填写开启时长理由"
                    android:textColorHint="#CCCCCC" />



                <TextView
                    android:gravity="center"
                    android:text="清除时长"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:background="@drawable/btn_pink_solid_bg"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="47dp" />
                <TextView
                    android:gravity="center"
                    android:text="确认提交"
                    android:layout_marginBottom="28dp"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:background="@drawable/btn_blue_solid_bg"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="47dp" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>




</FrameLayout>