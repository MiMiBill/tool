<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel_nodata"
    android:visibility="gone"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_nodata"
        android:src="@mipmap/icon_blank"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/padding_240"
        android:layout_height="@dimen/padding_185"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_75" />
    <TextView
        android:text="@string/no_data"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/padding_215"
        android:textSize="@dimen/text_size_10"
        android:layout_height="wrap_content" />
</RelativeLayout>