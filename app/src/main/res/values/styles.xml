<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义seekbarstyle-->
    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">11dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/color_f98248</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg</item>
        <item name="android:minHeight">11dp</item>
        <item name="android:thumb">@drawable/test_point</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!-- 标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 还可以加入一些弹出和退出的动画 (lan)-->
    </style>


    <style name="radiobutton_style">
        <item name="android:layout_marginTop">@dimen/padding_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_40</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/pop_radio_selector</item>
        <item name="android:paddingLeft">@dimen/padding_20</item>
        <item name="android:paddingRight">@dimen/padding_20</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>


    <style name="CustomPopMenuStyle" >
        <item name="android:itemBackground">@drawable/layout_white_click</item>
        <item name="android:dropDownListViewStyle">@style/popmenuDivier</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/popmeuText</item>
        <item name="android:textAppearanceLargePopupMenu">@style/popmeuText</item>
    </style>
    <!-- popMenu的背景色-->
    <style name="popmenuStyle" >
        <item name="android:background">@color/white</item>
    </style>
    <!--popmenu的字体颜色-->
    <style name="popmeuText">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--popMenu分割线的颜色-->
    <style name="popmenuDivier">
        <item name="android:divider">@color/color_eeeeee</item>
        <item name="android:dividerHeight">1px</item>
    </style>
</resources>
